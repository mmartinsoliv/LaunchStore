{% extends "layout.njk" %}

{% block content %}
<div class="card">
    <section class="avatar" 
                   style=" background: url({{member.avatar_url}}) no-repeat center center / cover "></section>
    <section class="details">
      <h3>Detalhes</h3>

      <div class="item">
          <div>Membro</div>
          <div>{{member.name}}</div>
      </div>
       <div class="item">
          <div>Membro</div>
          <div>{{member.email}}</div>
      </div>
      <div class="item">
        <div>Idade</div>
        <div>{{member.age}}</div>
    </div>
    <div class="item">
        <div>Sexo</div>
        <div>{{"Masculino" if member.gender == "M" else "Feminino"}}</div>
    </div>
   
    <div class="item">
        <div>Tipo sangu√≠neo</div>
        <div>{{member.blood}}</div>
    </div>

     <div class="item">
        <div>Peso</div>
        <div>{{member.weigth}}</div>
    </div>

     <div class="item">
        <div>Altura</div>
        <div>{{member.height}}</div>
    </div>

    <a href="/members/{{member.id}}/edit" class="button">Editar</a>
    </section>
</div>
{% endblock content %}